<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/mic_layout_id"
            android:layout_width="200dp"
            android:layout_centerHorizontal="true"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/result_text_id" app:layout_constraintVertical_bias="0.82">


        <ImageView
                android:id="@+id/accentOvalId"
                android:background="@drawable/circle_accent"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="140dp"/>


        <ImageView
                android:id="@+id/primaryOvalId"
                android:background="@drawable/circle_purple"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

        <ImageView
                android:id="@+id/micId"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/mic_icon"
                android:layout_gravity="center"
        />

    </FrameLayout>

    <TextView
            android:id="@+id/result_text_id"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:fontFamily="@font/muli_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:id="@+id/linearLayout">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/copy_content_fab_id"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/copy_icon"
                android:focusable="true"
                android:elevation="6dp"
                app:fabSize="normal"
                android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/share_content_fab_id"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/share_icon"
                android:focusable="true"
                android:elevation="6dp"
                app:fabSize="normal"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>