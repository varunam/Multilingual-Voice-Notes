<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/mic_layout_id"
            android:layout_width="200dp"
            android:layout_alignBottom="@id/transparent_view_id"
            android:layout_centerHorizontal="true"
            android:layout_height="200dp">


        <ImageView
                android:id="@+id/accentOvalId"
                android:background="@drawable/circle_accent"
                android:layout_gravity="center"
                android:layout_width="140dp"
                android:layout_height="140dp"/>


        <ImageView
                android:id="@+id/primaryOvalId"
                android:background="@drawable/circle_purple"
                android:layout_gravity="center"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

        <ImageView
                android:id="@+id/micId"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/mic_icon"
                android:layout_gravity="center"
        />

    </FrameLayout>

    <View
            android:id="@+id/transparent_view_id"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="130dp"
    />

    <TextView
            android:id="@+id/result_text_id"
            android:layout_below="@id/transparent_view_id"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:fontFamily="@font/muli_bold"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/copy_content_fab_id"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/copy_icon"
                android:focusable="true"
                android:elevation="6dp"
                app:fabSize="normal"
                android:layout_height="wrap_content"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/share_content_fab_id"
                android:layout_width="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:src="@drawable/share_icon"
                android:focusable="true"
                android:elevation="6dp"
                app:fabSize="normal"
                android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>